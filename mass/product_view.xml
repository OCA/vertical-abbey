<openerp>
<data>

<!-- Products -->
<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">mass.product.template.form.view</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch"  type="xml">
        <div name="options" position="inside">
            <div name="mass">
                <field name="mass"/>
                <label for="mass"/>
            </div>
        </div>
        <field name="type" position="after">
            <field name="mass_request_type_id"
                attrs="{'invisible': [('mass', '=', False)], 'required': [('mass', '=', True)]}"
                widget="selection"/>
        </field>
    </field>
</record>

<record id="product_template_search_view" model="ir.ui.view">
    <field name="name">mass.product.template.search</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_search_view"/>
    <field name="arch" type="xml">
        <filter name="filter_to_sell" position="after">
            <filter name="filter_mass" string="Mass" domain="[('mass', '=', 1)]"/>
        </filter>
    </field>
</record>

<record id="mass_product_action" model="ir.actions.act_window">
    <field name="name">Products</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="context">{'search_default_filter_mass': 1}</field>
</record>

<menuitem id="mass_products_menu" action="mass_product_action"
    parent="mass_config_menu" sequence="20"/>


</data>
</openerp>
