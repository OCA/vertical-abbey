<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch"  type="xml">
        <div id="languages" position="after">
            <div id="stay">
                <h2>Stays</h2>
                <div class='row mt16 o_settings_container' name="stay_setting_container">
                    <div class='col-12 col-lg-12 o_setting_box' id="stay_setting">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <label for="stay_default_refectory_id" class="col-md-5" />
                                <field name="stay_default_refectory_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </field>
</record>

</odoo>
