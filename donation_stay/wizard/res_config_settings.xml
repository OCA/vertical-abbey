<odoo>


<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">donation_stay.res.config.settings.form</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="stay.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <div data-key="stay" position="inside">
            <h2>Donation for a Stay</h2>
            <div class='row mt16 o_settings_container' name="stay_setting_container">
                <div class='col-12 col-lg-12 o_setting_box' id="stay_setting">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <label for="donation_stay_product_id" class="col-md-3" />
                            <field name="donation_stay_product_id" />
                        </div>
                        <div class="row" id="donation_stay_campaign_id">
                            <label for="donation_stay_campaign_id" class="col-md-3" />
                            <field name="donation_stay_campaign_id" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </field>
</record>


</odoo>
